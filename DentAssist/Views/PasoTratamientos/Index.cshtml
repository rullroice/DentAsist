@model IEnumerable<DentAssist.Models.PasoTratamiento>

@{
    ViewData["Title"] = "Listado de Pasos de Tratamiento";
    var selectedPlanId = ViewBag.SelectedPlanTratamientoId as int?;
}

<h1>Listado de Pasos de Tratamiento</h1>

<p>
    @* Si se llega aquí desde un plan específico, ofrecer la opción de crear un paso para ese plan *@
    @if (selectedPlanId.HasValue)
    {
        <a asp-action="Create" asp-route-planTratamientoId="@selectedPlanId" class="btn btn-primary">Añadir Nuevo Paso a este Plan</a>
    }
    else
    {
        <a asp-action="Create" class="btn btn-primary">Añadir Nuevo Paso</a>
    }
</p>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <div class="form-group mr-3">
        <label for="planTratamientoId" class="sr-only">Plan de Tratamiento</label>
        <select name="planTratamientoId" id="planTratamientoId" class="form-control"
                asp-items="@(ViewData["PlanTratamientoId"] as SelectList)">
            <option value="">Todos los Planes</option>
        </select>
    </div>
    <button type="submit" class="btn btn-info">Filtrar</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Limpiar Filtros</a>
</form>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlanTratamiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tratamiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Secuencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEstimada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRealizado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ObservacionesClinicas)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="PlanTratamientos" asp-action="Details" asp-route-id="@item.PlanTratamiento.Id">@Html.DisplayFor(modelItem => item.PlanTratamiento.Paciente.Nombre)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tratamiento.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Secuencia)
                </td>
                <td>
                    @item.FechaEstimada.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @* Manejo de FechaRealizado nullable *@
                    @if (item.FechaRealizado.HasValue)
                    {
                        @item.FechaRealizado.Value.ToString("dd/MM/yyyy")
                    }
                    else
                    {
                        <span>N/A</span>
                    }
                </td>
                <td>
                    <span class="badge @(item.Estado == "Realizado" ? "badge-success" : item.Estado == "Cancelado" ? "badge-danger" : item.Estado == "Pendiente" ? "badge-warning" : "badge-secondary")">
                        @Html.DisplayFor(modelItem => item.Estado)
                    </span>
                </td>
                <td>
                    @* Manejo de ObservacionesClinicas si es nulo o vacío *@
                    @if (!string.IsNullOrEmpty(item.ObservacionesClinicas))
                    {
                        @Html.DisplayFor(modelItem => item.ObservacionesClinicas)
                    }
                    else
                    {
                        <span>N/A</span>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Acciones de Paso de Tratamiento">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>