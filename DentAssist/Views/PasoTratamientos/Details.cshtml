@model DentAssist.Models.PasoTratamiento

@{
    ViewData["Title"] = "Detalles del Paso de Tratamiento";
}

<h1>Detalles del Paso de Tratamiento</h1>

<div>
    <h4>Paso de Tratamiento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.PlanTratamiento)
        </dt>
        <dd class="col-sm-9">
            <a asp-controller="PlanTratamientos" asp-action="Details" asp-route-id="@Model.PlanTratamiento.Id">@Model.PlanTratamiento.Paciente.Nombre - Plan #@Model.IdPlanTratamiento</a>
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Tratamiento)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Tratamiento.Nombre)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Secuencia)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Secuencia)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.FechaEstimada)
        </dt>
        <dd class="col-sm-9">
            @Model.FechaEstimada.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.FechaRealizado)
        </dt>
        <dd class="col-sm-9">
            @if (Model.FechaRealizado.HasValue)
            {
                @Model.FechaRealizado.Value.ToString("dd/MM/yyyy")
            }
            else
            {
                <span>N/A</span>
            }
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-9">
            <span class="badge @(Model.Estado == "Realizado" ? "badge-success" : Model.Estado == "Cancelado" ? "badge-danger" : Model.Estado == "Pendiente" ? "badge-warning" : "badge-secondary")">
                @Html.DisplayFor(model => model.Estado)
            </span>
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ObservacionesClinicas)
        </dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.ObservacionesClinicas))
            {
                @Html.DisplayFor(model => model.ObservacionesClinicas)
            }
            else
            {
                <span>N/A</span>
            }
        </dd>
    </dl>
</div>
<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary ml-2">Volver al Listado de Pasos</a>
    @* Opcional: Volver al plan de tratamiento específico si el ID del plan está disponible *@
    <a asp-controller="PlanTratamientos" asp-action="Details" asp-route-id="@Model.IdPlanTratamiento" class="btn btn-info ml-2">Volver al Plan de Tratamiento</a>
</div>