@model DentAssist.Models.Paciente

@{
    ViewData["Title"] = "Detalles del Paciente";
}

<h1>Detalles del Paciente: @Model.Nombre</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RUT)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RUT)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
    </dl>
</div>

<h2 class="mt-4">Planes de Tratamiento</h2>
@if (Model.PlanesDeTratamiento != null && Model.PlanesDeTratamiento.Any())
{
    foreach (var plan in Model.PlanesDeTratamiento.OrderByDescending(pt => pt.FechaCreacion))
    {
        <div class="card mb-3">
            <div class="card-header bg-info text-white">
                Plan ID: @plan.Id - Creado el: @plan.FechaCreacion.ToShortDateString() por @plan.Odontologo.Nombre
                <div class="float-right">
                    <a asp-controller="PlanTratamientos" asp-action="Edit" asp-route-id="@plan.Id" class="btn btn-sm btn-light">Editar Plan</a>
                    <a asp-controller="PlanTratamientos" asp-action="ExportarPdf" asp-route-id="@plan.Id" class="btn btn-sm btn-light ml-2">Exportar PDF</a>
                </div>
            </div>
            <div class="card-body">
                <p><strong>Observaciones Generales:</strong> @plan.ObservacionesGenerales</p>

                <h5>Pasos del Plan:</h5>
                @if (plan.PasosDelPlan != null && plan.PasosDelPlan.Any())
                {
                    <table class="table table-bordered table-sm">
                        <thead class="thead-light">
                            <tr>
                                <th>Sec.</th>
                                <th>Tratamiento</th>
                                <th>Fecha Estimada</th>
                                <th>Fecha Realizado</th>
                                <th>Estado</th>
                                <th>Observaciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var paso in plan.PasosDelPlan.OrderBy(ps => ps.Secuencia))
                            {
                                <tr>
                                    <td>@paso.Secuencia</td>
                                    <td>@paso.Tratamiento.Nombre</td>
                                    <td>@paso.FechaEstimada.ToShortDateString()</td>
                                    <td>@(paso.FechaRealizado.HasValue? paso.FechaRealizado.Value.ToShortDateString() : "N/A")</td>
                                    <td><span class="badge @(paso.Estado == "Realizado" ? "badge-success" : paso.Estado == "Cancelado" ? "badge-danger" : "badge-secondary")">@paso.Estado</span></td>
                                    <td>@paso.ObservacionesClinicas</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Este plan de tratamiento no tiene pasos definidos aún.</p>
                }
            </div>
        </div>
    }
}
else
{
    <p>Este paciente no tiene planes de tratamiento registrados.</p>
}

<h2 class="mt-4">Historial de Turnos</h2>
@if (Model.Turnos != null && Model.Turnos.Any())
{
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Fecha y Hora</th>
                <th>Duración</th>
                <th>Odontólogo</th>
                <th>Estado</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var turno in Model.Turnos.OrderByDescending(t => t.FechaHora))
            {
                <tr>
                    <td>@turno.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@turno.DuracionMinutos min</td>
                    <td>@turno.Odontologo.Nombre</td>
                    <td><span class="badge @(turno.Estado == "Realizado" ? "badge-success" : turno.Estado == "Cancelado" ? "badge-danger" : turno.Estado == "Confirmado" ? "badge-primary" : "badge-secondary")">@turno.Estado</span></td>
                    <td>@turno.Descripcion</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Turnos" asp-action="Edit" asp-route-id="@turno.Id" class="btn btn-sm btn-warning">Editar</a>
                            <a asp-controller="Turnos" asp-action="Details" asp-route-id="@turno.Id" class="btn btn-sm btn-info">Detalles</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Este paciente no tiene turnos registrados.</p>
}

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar Paciente</a>
    <a asp-action="Index" class="btn btn-secondary ml-2">Volver al Listado</a>
</div>