@model DentAssist.Models.Paciente

@{
    ViewData["Title"] = "Eliminar Paciente";
}

<div class="container main-content pt-4">
    <!-- Título y advertencia -->
    <div class="mb-4">
        <h2 class="text-danger">Eliminar paciente</h2>
        <h4 class="mt-3 mb-2">¿Estás seguro de que quieres eliminar a este paciente?</h4>
        <div class="alert alert-danger" role="alert">
            <strong>¡Advertencia!</strong> La eliminación de un paciente puede afectar a los planes de tratamiento y turnos asociados.
        </div>
    </div>

    <!-- Datos del paciente en card -->
    <div class="row mb-4">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary mb-4">Datos del paciente</h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-secondary">Nombre</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>
                        <dt class="col-sm-4 text-secondary">RUT</dt>
                        <dd class="col-sm-8">@Model.RUT</dd>
                        <dt class="col-sm-4 text-secondary">Teléfono</dt>
                        <dd class="col-sm-8">@Model.Telefono</dd>
                        <dt class="col-sm-4 text-secondary">Correo electrónico</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                        <dt class="col-sm-4 text-secondary">Dirección</dt>
                        <dd class="col-sm-8">@Model.Direccion</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Botones de acción -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-outline-secondary ml-3">Cancelar y volver al listado</a>
        </div>
    </form>
</div>