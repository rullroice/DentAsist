@model DentAssist.Models.Turno

@{
    ViewData["Title"] = "Crear Nuevo Turno";
}

<div class="container main-content pt-4">
    <!-- Encabezado alineado -->
    <div class="d-flex align-items-center justify-content-between flex-wrap mb-4">
        <h2 class="mb-0 text-primary">Crear un nuevo turno</h2>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>

    <div class="row">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h4 class="card-title text-primary mb-4">Nuevo turno</h4>
                    <form asp-action="Create">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-group">
                            <label for="FechaHora">Fecha y Hora</label>
                            <input asp-for="FechaHora" type="datetime-local" class="form-control"
                                   value="@(Model.FechaHora.ToString("yyyy-MM-ddTHH:mm"))" />
                            <span asp-validation-for="FechaHora" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="DuracionMinutos">Duración (minutos)</label>
                            <input asp-for="DuracionMinutos" type="number" class="form-control" min="15" max="240" />
                            <span asp-validation-for="DuracionMinutos" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label for="IdPaciente">Paciente</label>
                            <select asp-for="IdPaciente" class="form-control" asp-items="ViewBag.IdPaciente">
                                <option value="">-- Seleccionar Paciente --</option>
                            </select>
                            <span asp-validation-for="IdPaciente" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label for="IdOdontologo">Odontólogo</label>
                            <select asp-for="IdOdontologo" class="form-control" asp-items="ViewBag.IdOdontologo">
                                <option value="">-- Seleccionar Odontólogo --</option>
                            </select>
                            <span asp-validation-for="IdOdontologo" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label for="Estado">Estado</label>
                            <select asp-for="Estado" class="form-control">
                                <option value="Programado">Programado</option>
                                <option value="Realizado">Realizado</option>
                                <option value="Cancelado">Cancelado</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="Descripcion">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <input type="submit" value="Crear nuevo turno" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}