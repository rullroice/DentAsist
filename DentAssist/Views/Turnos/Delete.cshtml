@model DentAssist.Models.Turno

@{
    ViewData["Title"] = "Eliminar Turno";
}

<div class="container main-content pt-4">
    <!-- Título y advertencia -->
    <div class="mb-4">
        <h2 class="text-danger">Eliminar turno</h2>
        <h4 class="mt-3 mb-2">¿Estás seguro de que quieres eliminar este turno?</h4>
        <div class="alert alert-warning" role="alert">
            Esta acción eliminará el turno de forma permanente.
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary mb-4">Datos del turno</h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-5 text-secondary">Fecha y hora</dt>
                        <dd class="col-sm-7">@Model.FechaHora.ToString("dd/MM/yyyy HH:mm")</dd>
                        <dt class="col-sm-5 text-secondary">Duración</dt>
                        <dd class="col-sm-7">@Model.DuracionMinutos min</dd>
                        <dt class="col-sm-5 text-secondary">Estado</dt>
                        <dd class="col-sm-7">
                            <span class="badge @(Model.Estado == "Realizado" ? "badge-success" : Model.Estado == "Cancelado" ? "badge-danger" : Model.Estado == "Confirmado" ? "badge-primary" : "badge-secondary")">
                                @Model.Estado
                            </span>
                        </dd>
                        <dt class="col-sm-5 text-secondary">Descripción</dt>
                        <dd class="col-sm-7">@Model.Descripcion</dd>
                        <dt class="col-sm-5 text-secondary">Paciente</dt>
                        <dd class="col-sm-7">@Model.Paciente?.Nombre</dd>
                        <dt class="col-sm-5 text-secondary">Odontólogo</dt>
                        <dd class="col-sm-7">@Model.Odontologo?.Nombre</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-outline-secondary ml-3">Cancelar y volver al listado</a>
        </div>
    </form>
</div>