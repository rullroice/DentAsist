@model IEnumerable<DentAssist.Models.Tratamiento>

@{
    ViewData["Title"] = "Catálogo de Tratamientos";
}

<div class="container main-content pt-4">
    <!-- Título y botón alineados -->
    <div class="d-flex align-items-center justify-content-between flex-wrap mb-4">
        <h2 class="mb-0 text-primary">Catálogo de Tratamientos</h2>
        <a asp-action="Create" class="btn btn-primary">Registrar Nuevo Tratamiento</a>
    </div>

    <div class="table-responsive">
        <table class="table shadow-sm">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio Estimado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Descripcion</td>
                        <td>@item.PrecioEstimado.ToString("C")</td> @* Formato moneda. Usa "C0" si no quieres decimales. *@
                        <td>
                            <div class="btn-group" role="group" aria-label="Acciones de Tratamiento">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info ms-2">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-2">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>