@model IEnumerable<DentAssist.Models.Tratamiento>

@{
    ViewData["Title"] = "Catálogo de Tratamientos";
}

<h1>Catálogo de Tratamientos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar Nuevo Tratamiento</a>
</p>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioEstimado)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @item.PrecioEstimado.ToString("C") @* Formato de moneda, ajusta según tu cultura local (Chile: CLP)*@
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Acciones de Tratamiento">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>