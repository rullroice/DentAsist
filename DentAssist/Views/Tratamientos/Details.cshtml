@model DentAssist.Models.Tratamiento

@{
    ViewData["Title"] = "Detalles del Tratamiento";
}

<div class="container main-content pt-4">
    <!-- Título y botón de regreso -->
    <div class="d-flex align-items-center justify-content-between flex-wrap mb-4">
        <h2 class="mb-0 text-primary">Detalles del tratamiento</h2>
        <a asp-action="Index" class="btn btn-secondary">Volver al catálogo</a>
    </div>

    <!-- Card para los detalles -->
    <div class="row">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <h5 class="card-title text-primary mb-4">Datos del tratamiento</h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-secondary">Nombre</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>
                        <dt class="col-sm-4 text-secondary">Descripción</dt>
                        <dd class="col-sm-8">@Model.Descripcion</dd>
                        <dt class="col-sm-4 text-secondary">Precio estimado</dt>
                        <dd class="col-sm-8">@Model.PrecioEstimado.ToString("C")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Botones de acción -->
    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-outline-secondary ml-3">Volver al catálogo</a>
    </div>
</div>