@model DentAssist.Models.Tratamiento

@{
    ViewData["Title"] = "Editar Tratamiento";
}

<div class="container main-content pt-4">
    <!-- Título y regreso -->
    <div class="d-flex align-items-center justify-content-between flex-wrap mb-4">
        <h2 class="mb-0 text-primary">Editar tratamiento</h2>
        <a asp-action="Index" class="btn btn-secondary">Volver al catálogo</a>
    </div>

    <div class="row">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h4 class="card-title text-primary mb-4">Datos del tratamiento</h4>
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label asp-for="Nombre">Nombre</label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="Descripcion">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label asp-for="PrecioEstimado">Precio estimado</label>
                            <input asp-for="PrecioEstimado" class="form-control" type="number" step="0.01" min="0" />
                            <span asp-validation-for="PrecioEstimado" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <input type="submit" value="Guardar cambios" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-outline-secondary ml-3">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}