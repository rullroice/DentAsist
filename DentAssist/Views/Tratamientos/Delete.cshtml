@model DentAssist.Models.Tratamiento

@{
    ViewData["Title"] = "Eliminar Tratamiento";
}

<div class="container main-content pt-4">
    <div class="mb-4">
        <h2 class="text-danger">Eliminar tratamiento</h2>
        <h4 class="mt-3 mb-2">¿Estás seguro de que quieres eliminar este tratamiento del catálogo?</h4>
        <div class="alert alert-warning" role="alert">
            <strong>Ten en cuenta:</strong> La eliminación de un tratamiento puede afectar a los planes de tratamiento existentes que lo incluyan.
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary mb-4">Datos del tratamiento</h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-secondary">Nombre</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>
                        <dt class="col-sm-4 text-secondary">Descripción</dt>
                        <dd class="col-sm-8">@Model.Descripcion</dd>
                        <dt class="col-sm-4 text-secondary">Precio estimado</dt>
                        <dd class="col-sm-8">@Model.PrecioEstimado.ToString("C")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-outline-secondary ml-3">Cancelar y volver al catálogo</a>
        </div>
    </form>
</div>