@model DentAssist.Models.Odontologo

@{
    ViewData["Title"] = "Detalles del Odontólogo";
}

<h1>Detalles del Odontólogo: @Model.Nombre</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Matricula)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Matricula)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Especialidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Especialidad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>

<h2 class="mt-4">Turnos Asignados</h2>
@if (Model.Turnos != null && Model.Turnos.Any())
{
    <table class="table table-striped table-bordered table-sm">
        <thead class="thead-dark">
            <tr>
                <th>Fecha y Hora</th>
                <th>Paciente</th>
                <th>Duración</th>
                <th>Estado</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var turno in Model.Turnos.OrderByDescending(t => t.FechaHora))
            {
                <tr>
                    <td>@turno.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                    <td><a asp-controller="Pacientes" asp-action="Details" asp-route-id="@turno.Paciente.Id">@turno.Paciente.Nombre</a></td>
                    <td>@turno.DuracionMinutos min</td>
                    <td><span class="badge @(turno.Estado == "Realizado" ? "badge-success" : turno.Estado == "Cancelado" ? "badge-danger" : turno.Estado == "Confirmado" ? "badge-primary" : "badge-secondary")">@turno.Estado</span></td>
                    <td>@turno.Descripcion</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Turnos" asp-action="Edit" asp-route-id="@turno.Id" class="btn btn-sm btn-warning">Editar</a>
                            <a asp-controller="Turnos" asp-action="Details" asp-route-id="@turno.Id" class="btn btn-sm btn-info">Detalles</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Este odontólogo no tiene turnos registrados.</p>
}

<h2 class="mt-4">Planes de Tratamiento Creados</h2>
@if (Model.PlanesDeTratamiento != null && Model.PlanesDeTratamiento.Any())
{
    <table class="table table-striped table-bordered table-sm">
        <thead class="thead-dark">
            <tr>
                <th>Paciente</th>
                <th>Fecha de Creación</th>
                <th>Observaciones Generales</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var plan in Model.PlanesDeTratamiento.OrderByDescending(pt => pt.FechaCreacion))
            {
                <tr>
                    <td><a asp-controller="Pacientes" asp-action="Details" asp-route-id="@plan.Paciente.Id">@plan.Paciente.Nombre</a></td>
                    <td>@plan.FechaCreacion.ToShortDateString()</td>
                    <td>@plan.ObservacionesGenerales</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="PlanTratamientos" asp-action="Details" asp-route-id="@plan.Id" class="btn btn-sm btn-info">Detalles</a>
                            <a asp-controller="PlanTratamientos" asp-action="Edit" asp-route-id="@plan.Id" class="btn btn-sm btn-warning">Editar</a>
                            <a asp-controller="PlanTratamientos" asp-action="ExportarPdf" asp-route-id="@plan.Id" class="btn btn-sm btn-secondary">PDF</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Este odontólogo no ha creado planes de tratamiento.</p>
}


<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar Odontólogo</a>
    <a asp-action="Agenda" asp-route-id="@Model.Id" class="btn btn-info ml-2">Ver Agenda Semanal</a>
    <a asp-action="FichasPacientes" asp-route-id="@Model.Id" class="btn btn-info ml-2">Ver Pacientes Relacionados</a>
    <a asp-action="Index" class="btn btn-secondary ml-2">Volver al Listado</a>
</div>