@model IEnumerable<DentAssist.Models.Turno>

@{
    ViewData["Title"] = "Agenda Semanal";
    var odontologo = ViewBag.Odontologo as DentAssist.Models.Odontologo;
    DateTime startOfWeek = ViewBag.StartOfWeek;
    DateTime endOfWeek = ViewBag.EndOfWeek; // Ya viene ajustado para mostrar el día final
}

<h1>Agenda Semanal de @odontologo.Nombre</h1>

<p>
    Del @startOfWeek.ToString("dd/MM/yyyy") al @endOfWeek.ToString("dd/MM/yyyy")
</p>

<div class="mb-3">
    <a asp-action="Agenda" asp-route-id="@odontologo.Id" asp-route-startDate="@startOfWeek.AddDays(-7).ToString("yyyy-MM-dd")" class="btn btn-info">&laquo; Semana Anterior</a>
    <a asp-action="Agenda" asp-route-id="@odontologo.Id" asp-route-startDate="@DateTime.Today.ToString("yyyy-MM-dd")" class="btn btn-secondary ml-2">Hoy</a>
    <a asp-action="Agenda" asp-route-id="@odontologo.Id" asp-route-startDate="@startOfWeek.AddDays(7).ToString("yyyy-MM-dd")" class="btn btn-info ml-2">Semana Siguiente &raquo;</a>
</div>

<div class="row">
    @for (int i = 0; i < 7; i++)
    {
        DateTime currentDay = startOfWeek.AddDays(i);
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-header @(currentDay.Date == DateTime.Today.Date ? "bg-primary text-white" : "bg-light")">
                    <h5 class="mb-0">@currentDay.ToString("dddd d 'de' MMMM")</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any(t => t.FechaHora.Date == currentDay.Date))
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var turno in Model.Where(t => t.FechaHora.Date == currentDay.Date).OrderBy(t => t.FechaHora))
                            {
                                <li class="list-group-item">
                                    <h6 class="mb-0">@turno.FechaHora.ToString("HH:mm") - @turno.FechaHora.AddMinutes(turno.DuracionMinutos).ToString("HH:mm")</h6>
                                    <p class="mb-1"><strong>Paciente:</strong> <a asp-controller="Pacientes" asp-action="Details" asp-route-id="@turno.Paciente.Id">@turno.Paciente.Nombre</a></p>
                                    <p class="mb-1"><strong>Descripción:</strong> @turno.Descripcion</p>
                                    <p class="mb-0"><strong>Estado:</strong> <span class="badge @(turno.Estado == "Realizado" ? "badge-success" : turno.Estado == "Cancelado" ? "badge-danger" : turno.Estado == "Confirmado" ? "badge-primary" : "badge-secondary")">@turno.Estado</span></p>
                                    <div class="btn-group btn-group-sm mt-1" role="group">
                                        <a asp-controller="Turnos" asp-action="Edit" asp-route-id="@turno.Id" class="btn btn-sm btn-warning">Editar</a>
                                        <a asp-controller="Turnos" asp-action="Details" asp-route-id="@turno.Id" class="btn btn-sm btn-info">Detalles</a>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No hay turnos programados para este día.</p>
                    }
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-4">
    <a asp-action="Details" asp-route-id="@odontologo.Id" class="btn btn-secondary">Volver a Detalles del Odontólogo</a>
</div>