@model DentAssist.Models.Odontologo

@{
    ViewData["Title"] = "Eliminar Odontólogo";
}

<div class="container main-content pt-4">
    <div class="mb-4">
        <h2 class="text-danger">Eliminar odontólogo</h2>
        <h4 class="mt-3 mb-2">¿Estás seguro de que quieres eliminar a este odontólogo?</h4>
        <div class="alert alert-danger" role="alert">
            <strong>¡Advertencia!</strong> La eliminación de un odontólogo es irreversible y puede afectar a los planes de tratamiento y turnos asociados que haya creado.
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary mb-4">Datos del odontólogo</h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-secondary">Nombre</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>
                        <dt class="col-sm-4 text-secondary">Matrícula</dt>
                        <dd class="col-sm-8">@Model.Matricula</dd>
                        <dt class="col-sm-4 text-secondary">Especialidad</dt>
                        <dd class="col-sm-8">@Model.Especialidad</dd>
                        <dt class="col-sm-4 text-secondary">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-outline-secondary ml-3">Cancelar y volver al listado</a>
        </div>
    </form>
</div>