@model DentAssist.Models.PlanTratamiento

@{
    ViewData["Title"] = "Crear Plan de Tratamiento";
}

<h1>Crear Nuevo Plan de Tratamiento</h1>

<h4>PlanTratamiento</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="text-danger" asp-validation-summary="All"></div> @* ¡IMPORTANTE! Mostrará todos los errores aquí *@
            <div class="form-group">
                <label asp-for="IdPaciente" class="control-label"></label>
                <select asp-for="IdPaciente" class="form-control" asp-items="ViewBag.IdPaciente">
                    <option value="">-- Seleccionar Paciente --</option> @* Opción por defecto clara *@
                </select>
                <span asp-validation-for="IdPaciente" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="IdOdontologo" class="control-label"></label>
                <select asp-for="IdOdontologo" class="form-control" asp-items="ViewBag.IdOdontologo">
                    <option value="">-- Seleccionar Odontólogo --</option> @* Opción por defecto clara *@
                </select>
                <span asp-validation-for="IdOdontologo" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="FechaCreacion" class="control-label"></label>
                <input asp-for="FechaCreacion" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" /> @* Valor por defecto a la fecha actual *@
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="ObservacionesGenerales" class="control-label"></label>
                <textarea asp-for="ObservacionesGenerales" class="form-control" rows="5"></textarea>
                <span asp-validation-for="ObservacionesGenerales" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Crear Plan" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Volver al Listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}